<div class="container" style="margin:100px o">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="form-group">
                 <label for="">Titulo</label>
                 <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
            
            </div>
            <div class="form-group">
                <label for="">Subtitulo</label>
                <textarea placeholder="subtitulo" class="form-control" name="subtitulo">{{novedad.subtitulo}}</textarea>
            </div>
            <div class="form-group">
                <label for="">Cuerpo</label>
                <textarea placeholder="cuerpo" name="cuerpo" class="form-control" >{{novedad.cuerpo}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>